<section class="hero is-info">
  <div class="hero-body">
    <div class="container columns is-centered">
      <h3 class="title">
        新しいアカウントを作成
      </h3>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :　, class: "label" %>
          <p class="control">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", :placeholder => "ユーザー名", class: "input" %>
          </p>
        </div>
        <div class="field">
          <%= f.label :　, class: "label" %>
          <p class="control">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "メールアドレス", class: "input" %>
          </p>
        </div>
        <div class="field">
          <%= f.label :　, class: "label" %>
          <p class="control">
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", :placeholder => "パスワード", class: "input" %>
          </p>
        </div>
        <div class="field">
          <%= f.label :　, class: "label" %>
          <p class="control">
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", :placeholder => "パスワード確認", class: "input" %>
          </p>
        </div>

        <div class="new-actions">
          <%= f.submit "新しいアカウントを作成", class: "button is-success" %>
        </div>
      <% end %>

      <div class="new-actions">
        <%= link_to "すでにアカウントをお持ちの方はログイン", new_user_session_path %>
      </div>
    </div>
  </div>
</section>
