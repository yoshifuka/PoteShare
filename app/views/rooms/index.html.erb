<section class="hero is-info">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        ルーム一覧
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @rooms.each do |room| %>
        <div class="column is-4">
          <div class="card">
            <div class="card-image">
              <figure class="image is-4by3">
                <%= link_to room_path(room) do %>
                  <%= attachment_image_tag room, :room_image, class: "imags" %>
                <% end %>
              </figure>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-content has-text-weight-semibold has-text-centered">
                    <%= room.title %>
                  <%= link_to room_path(room), class: "panel-block" do %>
                  <button class="button is-fullwidth is-primary is-outlined">
                    <span class="panel-icon">
                      <i class="fas fa-book" aria-hidden="true"></i>
                    </span>
                    このルームを見る
                    </button>
                  <% end %>
                </div>
              </div>
              <div class="content has-text-right">
                <time><%= room.updated_at.strftime("%Y-%m-%d %H:%M") %></time>更新
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
</div>
